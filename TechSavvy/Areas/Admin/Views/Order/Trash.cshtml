@model IEnumerable<OrderModel>
@{
    ViewData["Title"] = "Trash - Đơn hàng";
}

<div class="p-3 bg-light rounded shadow-sm mb-4">
    <h3 class="text-dark fw-bold">Đơn hàng đã xóa</h3>
    <a class="btn btn-primary mt-2" asp-action="Index" asp-controller="Order">
        <i class="fa fa-arrow-left"></i> Quay lại danh sách
    </a>
</div>

<div class="table-responsive mt-4">
    <table class="table table-bordered table-hover align-middle" id="myTable">
        <thead class="table-dark text-center">
            <tr>
                <th>Id</th>
                <th>Mã đơn hàng</th>
                <th>Tên người đặt</th>
                <th>Giá ship</th>
                <th>Mã coupon</th>
                <th>Ngày tạo</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderCode</td>
                    <td>@item.UserName</td>
                    <td>@item.ShippingCost.ToString("#,##0 VNĐ")</td>
                    <td>@item.CouponCode</td>
                    <td>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-center">
                        <a class="btn btn-success btn-sm me-1" asp-action="Restore" asp-controller="Order" asp-route-id="@item.Id">
                            <i class="fa fa-undo"></i> Khôi phục
                        </a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeletePermanent" asp-controller="Order" asp-route-id="@item.Id">
                            <i class="fa fa-trash"></i> Xóa vĩnh viễn
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>