@model CategoryModel
@{
    TempData["title"] = "Create Category";
}
<div class="p-3 bg-light rounded shadow-sm mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="mb-0 text-dark fw-bold"><i class="fa fa-plus"></i> Thêm danh mục</h3>
    </div>
</div>

<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label><i class="fa fa-tag"></i> Tên danh mục</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>

        <div class="form-group">
            <label><i class="fa fa-align-left"></i> Mô tả</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>

        <div class="form-group">
            <label><i class="fa fa-eye"></i> Trạng thái</label>
            <select asp-for="Status" class="form-control">
                <option value="1">Hiển thị</option>
                <option value="0">Ẩn</option>
            </select>
            <span asp-validation-for="Status" class="text-danger" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary"><i class="fa fa-save"></i> Tạo</button>
        </div>
    </form>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Về trang danh sách sản phẩm</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
