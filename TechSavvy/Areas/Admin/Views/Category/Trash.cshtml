@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "Trash - Danh mục";
}

<div class="p-3 bg-light rounded shadow-sm mb-4">
    <h3 class="text-dark fw-bold">Danh mục đã xóa</h3>
    <a class="btn btn-primary mt-2" asp-action="Index" asp-controller="Category">
        <i class="fa fa-arrow-left"></i> Quay lại danh sách
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover shadow-sm" id="myTable">
        <thead class="table-dark text-center">
            <tr>
                <th>Id</th>
                <th>Tên danh mục</th>
                <th>Mô tả</th>
                <th>Slug</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@Html.Raw(item.Description)</td>
                    <td>@item.Slug</td>
                    <td class="text-center">
                        <a class="btn btn-success btn-sm me-1" asp-action="Restore" asp-controller="Category" asp-route-id="@item.Id">
                            <i class="fa fa-undo"></i> Khôi phục
                        </a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeletePermanent" asp-controller="Category" asp-route-id="@item.Id">
                            <i class="fa fa-trash"></i> Xóa vĩnh viễn
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>