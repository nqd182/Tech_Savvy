@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "Category Listed";
}
<h3>Danh sách danh mục</h3>
<a class="btn btn-success" asp-action="Create" asp-controller="Category">Thêm danh mục</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Tên danh mục</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Slug</th>
            <th scope="col">Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(item.Description)</td>
                <td>@item.Slug</td>
                <td>@item.Status</td>

                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id">Sửa</a>
                    <a class="btn btn-danger confirmDeletion" asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id">Xóa</a>
                </td>

            </tr>
        }


    </tbody>
</table>