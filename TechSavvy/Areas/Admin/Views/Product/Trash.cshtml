@model IEnumerable<ProductModel>

<h3>Sản phẩm đã xóa</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <img src="~/media/products/@item.Image" width="100" />
                </td>
                <td>
                    <a asp-action="Restore" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                        <i class="fa fa-undo"></i> Khôi phục
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
<a asp-action="Index">
    <i class="fa fa-arrow-left"></i> Về trang danh sách sản phẩm
</a>