@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
}
<h3>Danh sách sản phẩm</h3>
<a class="btn btn-success" asp-action="Create" asp-controller="Product">Thêm sản phẩm</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Đã bán</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Giá</th>
            <th scope="col">Ảnh</th>
            <th scope="col">Slug</th>
            <th scope="col">Danh mục</th>
            <th scope="col">Thương hiệu</th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td><b>@item.Quantity</b><br /><a asp-action="AddQuantity" asp-controller="Product" asp-route-Id="@item.Id">Thêm</a></td>
                <td><b>@item.Sold</b><a asp-action="AddQuantity" asp-controller="Product" asp-route-Id="@item.Id">Thêm</a></td>
                <td>@Html.Raw(item.Description)</td>
                <td>@item.Price.ToString("#,##0 vnđ")</td>
                <td><img src="~/media/products/@item.Image" width="120" /></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-controller="Product" asp-route-Id = "@item.Id">Sửa</a>
                    <a class="btn btn-danger confirmDeletion" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id" >Xóa</a>
                </td>
                
            </tr>
        }
       
       
    </tbody>
</table>
