@model IEnumerable<AppUserModel>
@{
    ViewData["Title"] = "Trash - Người dùng";
}

<div class="p-3 bg-light rounded shadow-sm mb-4">
    <h3 class="text-dark fw-bold">Người dùng đã xóa</h3>
    <a class="btn btn-primary mt-2" asp-action="Index" asp-controller="User">
        <i class="fa fa-arrow-left"></i> Quay lại danh sách
    </a>
</div>

<div class="table-responsive mt-4">
    <table class="table table-bordered table-hover align-middle" id="myTable">
        <thead class="table-dark text-center">
            <tr>
                <th>Id</th>
                <th>Tên người dùng</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td class="text-center">
                        <a class="btn btn-success btn-sm me-1" asp-action="Restore" asp-controller="User" asp-route-id="@item.Id">
                            <i class="fa fa-undo"></i> Khôi phục
                        </a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeletePermanent" asp-controller="User" asp-route-id="@item.Id">
                            <i class="fa fa-trash"></i> Xóa vĩnh viễn
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>