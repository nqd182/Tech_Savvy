@model AppUserModel
@{
    TempData["title"] = "Create User";
}

<div class="p-3 bg-light rounded shadow-sm mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="mb-0 text-dark fw-bold"><i class="fa fa-user-plus"></i> Thêm người dùng</h3>
    </div>
</div>

<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label><i class="fa fa-user"></i> Tên người dùng</label>
            <input asp-for="UserName" class="form-control" required />
            <span asp-validation-for="UserName" class="text-danger" />
        </div>

        <div class="form-group">
            <label><i class="fa fa-envelope"></i> Email</label>
            <input asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger" />
        </div>

        <div class="form-group">
            <label><i class="fa fa-phone"></i> Số điện thoại</label>
            <input asp-for="PhoneNumber" class="form-control" required />
            <span asp-validation-for="PhoneNumber" class="text-danger" />
        </div>
        <div class="form-group">
            <label><i class="fa fa-calendar"></i> Năm sinh</label>
            <input asp-for="BirthYear" class="form-control" required />
            <span asp-validation-for="BirthYear" class="text-danger" />
        </div>

        <div class="form-group">
            <label><i class="fa fa-venus-mars"></i> Giới tính</label>
            <select asp-for="Gender" class="form-control" required>
                <option value="">-- Chọn giới tính --</option>
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>
                <option value="Khác">Khác</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger" />
        </div>

        <div class="form-group">
            <label><i class="fa fa-lock"></i> Mật khẩu</label>
            <input asp-for="PasswordHash" class="form-control" required />
            <span asp-validation-for="PasswordHash" class="text-danger" />
        </div>

        <div class="form-group">
            <label><i class="fa fa-briefcase"></i> Vai trò</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
            </select>
            <span asp-validation-for="RoleId" class="text-danger" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary"><i class="fa fa-save"></i> Tạo</button>
        </div>
    </form>

    <a asp-action="Index" class="btn btn-secondary mt-3"><i class="fa fa-arrow-left"></i> Về trang danh sách người dùng</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
