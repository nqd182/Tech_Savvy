@model IEnumerable<AppUserModel>
@{
    ViewData["title"] = "User Listed";
}
<h3>Danh sách danh mục</h3>
<a class="btn btn-success" asp-action="Create" asp-controller="User">Thêm người dùng</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Tên người dùng/th>
            <th scope="col">Email</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">Quyền</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td></td>

                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-controller="User" asp-route-Id="@item.Id">Sửa</a>
                    <a class="btn btn-danger confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-Id="@item.Id">Xóa</a>
                </td>

            </tr>
        }


    </tbody>
</table>