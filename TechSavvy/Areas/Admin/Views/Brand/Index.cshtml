@model IEnumerable<BrandModel>

@{
    ViewData["Title"] = "Danh sách thương hiệu";
}

<div class="p-3 bg-light rounded shadow-sm mb-4">
    <h3 class="text-dark fw-bold">Danh sách thương hiệu</h3>
    <a class="btn btn-success mt-2" asp-action="Create" asp-controller="Brand">
        <i class="fa fa-plus"></i> Thêm thương hiệu
    </a>
    <a class="btn btn-secondary mt-2" asp-action="Trash" asp-controller="Brand">
        <i class="fa fa-trash"></i> Thùng rác
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover shadow-sm" id="myTable">
        <thead class="table-dark text-center">
            <tr>
                <th>Id</th>
                <th>Tên thương hiệu</th>
                <th>Mô tả</th>
                <th>Slug</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@Html.Raw(item.Description)</td>
                    <td>@item.Slug</td>
                    <td class="text-center">
                        <span class="badge @(item.Status == 1 ? "bg-success" : "bg-secondary")">
                            @(item.Status == 1 ? "Hiển thị" : "Ẩn")
                        </span>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm me-1" asp-action="Edit" asp-controller="Brand" asp-route-id="@item.Id">
                            <i class="fa fa-edit"></i> Sửa
                        </a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Brand" asp-route-id="@item.Id">
                            <i class="fa fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
