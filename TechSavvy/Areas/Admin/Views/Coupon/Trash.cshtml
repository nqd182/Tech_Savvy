@model IEnumerable<TechSavvy.Models.CouponModel>

<h3>Trash - Coupon đã xóa</h3>
<a asp-action="Index" class="btn btn-primary"> <i class="fa fa-arrow-left"></i> Quay lại danh sách</a>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-dark text-center">
        <tr>
            <th>Id</th>
            <th>Tên Coupon</th>
            <th>Mô tả</th>
            <th>Giá trị</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coupon in Model)
        {
            <tr>
                <td>@coupon.Id</td>
                <td>@coupon.Name</td>
                <td>@coupon.Description</td>
                <td>@coupon.Price.ToString("#,##0 VNĐ")</td>
                <td class="text-center">
                    <a asp-action="Restore" asp-route-id="@coupon.Id" class="btn btn-success btn-sm">
                        <i class="fa fa-undo"></i> Khôi phục
                    </a>
                    <a asp-action="DeletePermanent" asp-route-id="@coupon.Id" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash"></i> Xóa vĩnh viễn
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>