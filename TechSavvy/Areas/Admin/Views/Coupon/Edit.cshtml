@model CouponModel
@{
    ViewData["Title"] = "Chỉnh sửa mã giảm giá";
}

<div class="p-3 bg-light rounded shadow-sm mb-4">
    <h3 class="text-dark fw-bold">Chỉnh sửa mã giảm giá</h3>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card p-3 shadow-sm rounded">
            <form asp-controller="Coupon" asp-action="Edit" method="post" enctype="multipart/form-data" autocomplete="off">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-2">
                    <label class="fw-bold">Tên mã</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label class="fw-bold">Mô tả</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label class="fw-bold">Số tiền giảm</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label class="fw-bold">Ngày bắt đầu</label>
                    <input asp-for="DateStart" class="form-control" />
                    <span asp-validation-for="DateStart" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label class="fw-bold">Ngày hết hạn</label>
                    <input asp-for="DateExpired" class="form-control" />
                    <span asp-validation-for="DateExpired" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label class="fw-bold">Số lượng</label>
                    <input asp-for="Quantity" min="1" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="fw-bold">Trạng thái</label>
                    <select asp-for="Status" class="form-control">
                        <option value="1">Kích hoạt</option>
                        <option value="0">Ẩn</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-success w-100"><i class="fa fa-save"></i> Cập nhật</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/ui/1.14.0/jquery-ui.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $('[name="DateStart"], [name="DateExpired"]').datepicker({
            changeYear: true,
            minDate: 0,
            showButtonPanel: true,
            dateFormat: 'dd/mm/yy'
        });
    </script>
}
