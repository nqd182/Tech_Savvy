	<script>
		$(function (){
		var message = '@TempData["success"]';
			if(message !== '')
				Swal.fire({
					title: message,
					icon: "success",
					draggable: true
				});
		}
		);
	</script>
	<script>
		$(function (){
		var message = '@TempData["error"]';
			if(message !== '')
				Swal.fire({
						icon: "error",
						title: message,
				});
		}
		);
	</script>
	@await RenderSectionAsync("Scripts", required: false)

