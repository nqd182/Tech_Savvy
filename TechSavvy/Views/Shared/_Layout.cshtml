<body>
	<style>
		#header {
			position: sticky;
			top: 0;
			z-index: 500;
			background-color: #fff;
			box-shadow: 0 1px 1px rgba(0,0,0,0.1);
		}

		.header_top{
            background-color: black;
            color: white;
            font-weight: bold;
		}
		.header-bottom {
			background-color: #fff;
		}
		a{
            color: #000;
		}	

		.left-sidebar h2, .brands_products h2{
			color: #000
		}

		
	</style>
	<header id="header">
		<!--header-->
		<div class="header_top">
			<!--header_top-->
			<div class="container">
				<div class="row">
					<div class="col-sm-6">
						<div class="contactinfo">
							<ul class="nav nav-pills">
								<li><a href="#"><i class="fa fa-phone"></i> Hotline: 036 668 3210</a></li>
								<li><a href="#"><i class="fa fa-envelope"></i> Email: nguyendung180203@gmail.com</a></li>
							</ul>
						</div>
					</div>
					<div class="col-sm-6">
						<div class="social-icons pull-right">
							<ul class="nav navbar-nav">
								<li><a href="https://www.facebook.com/nqd1802"><i class="fa fa-facebook"></i></a></li>
								<li><a href="https://www.instagram.com/_huz0366/?theme=dark"><i class="fa fa-instagram"></i></a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div><!--/header_top-->

		<div class="header-middle" style="background: #DCDCDC; padding: 10px 0;">
			<div class="container">
				<div class="row" style="display: flex; align-items: center; justify-content: space-between; border:none;">
					<!-- Trái -->
					<div class="col-md-2" style="display: flex; align-items: center; gap: 10px;">
						@* <a href="/"> *@
						@* 	<img src="~/media/Logo.png" alt="Logo" style="max-height: 100px;"> *@
						@* </a> *@
						<a href="/" class="btn btn-outline-dark" style="font-weight:bold"><i class="fa fa-home"></i> Trang chủ</a>
						<a href="http://localhost:5252/admin" style="font-weight:bold" class="btn btn-outline-dark"> Admin</a>
					</div>

					<!-- Giữa -->
					<div class="col-md-3">
						<form asp-controller="Product" asp-action="Search" method="post" class="input-group">
							<input type="text" name="searchItem" class="form-control" placeholder="Nhập từ khóa tìm kiếm">
							<span class="input-group-btn">
								<button class="btn btn-success" type="submit">Tìm kiếm</button>
							</span>
						</form>
					</div>

					<!-- Phải: Menu tài khoản + giỏ hàng -->
					<!-- Phải -->
					<div class="col-md-7">
						<ul class="nav navbar-nav navbar-right">
							<li><a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-cart"></i> Giỏ hàng</a></li>
							@if (User.Identity?.IsAuthenticated ?? false)
							{
								<li><a asp-controller="Home" asp-action="Wishlist"><i class="fa fa-heart-o"></i> Yêu thích</a></li>
								<li><a href="checkout.html"><i class="fa fa-crosshairs"></i> Thanh toán</a></li>
								<li><a href="#"><i class="fa fa-user"></i> Tài khoản</a></li>
								<li><a asp-controller="Account" asp-action="Logout"><i class="fa fa-sign-out"></i> Xin chào @User.Identity.Name, Đăng xuất</a></li>
							}
							else
							{
								<li><a asp-controller="Account" asp-action="Login"><i class="fa fa-lock"></i> Đăng nhập</a></li>
							}
						</ul>
					</div>
				</div>
			</div>
		</div>

	</header><!--/header-->

	<section>

		<div class="container">
			<div class="row">
				@Html.Partial("_NotificationPartial")
