@model IEnumerable<CategoryModel>
<style>
    .sidebar-section {
        margin-bottom: 32px;
    }

    .sidebar-title {
        font-family: 'Montserrat', Arial, sans-serif;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 18px;
        letter-spacing: 1px;
        color: #222;
    }

    .category-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .category-link {
        display: block;
        background: #fff;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 10px 18px;
        font-family: 'Montserrat', Arial, sans-serif;
        font-size: 1rem;
        color: #222;
        text-decoration: none;
        transition: all 0.2s;
        font-weight: 500;
        box-shadow: 0 1px 2px rgba(0,0,0,0.01);
    }

        .category-link:hover, .category-link:focus {
            background: #f5f5f5;
            border-color: #ff4d4f;
            color: #ff4d4f;
            text-decoration: none;
        }
</style>

<div class="sidebar-section">
    <div class="sidebar-title">DANH MỤC SẢN PHẨM</div>
    <div class="category-list">
        @foreach (var item in Model)
        {
            <a class="category-link" asp-action="Index" asp-controller="Category" asp-route-Slug="@item.Slug">@item.Name</a>
        }
    </div>
</div>