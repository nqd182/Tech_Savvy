@model ContactModel

<!-- top footer -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<div class="col-md-3 col-xs-6">
				<div class="footer">
					<h3 class="footer-title">Về Tech Savvy</h3>
					<p>@Html.Raw(Model.Description)</p>
					<ul class="footer-links">
						<li><a href="#"><i class="fa fa-map-marker"></i>@Model.Name</a></li>
						<li><a href="#"><i class="fa fa-phone"></i>@Model.Phone</a></li>
						<li><a href="#"><i class="fa fa-envelope-o"></i>@Model.Email</a></li>
					</ul>
				</div>
			</div>

			<div class="col-md-4 col-xs-6">
				<div class="footer">
					<h3 class="footer-title">Bản đồ cửa hàng</h3>
					@Html.Raw(Model.Map)
				</div>
			</div>

			<div class="clearfix visible-xs"></div>

			<div class="col-md-3 col-xs-6">
				<div class="footer">
					<h3 class="footer-title">Chính sách</h3>
					<ul class="footer-links">
						<li><a href="#">Chính Sách Bảo Mật</a></li>
						<li><a href="#">Qui Định Bảo Hành</a></li>
						<li><a href="#">Chính Sách Đổi Trả</a></li>
						<li><a href="#">Điều khoản sử dụng</a></li>
					</ul>
				</div>
			</div>

			<div class="col-md-2 col-xs-6">
				<div class="footer">
					<h3 class="footer-title">Dịch vụ</h3>
					<ul class="footer-links">
						<li><a asp-action="UpdateAccount" asp-controller="Account">Tài khoản của tôi</a></li>
						<li><a asp-action="Index" asp-controller="Cart">Giỏ hàng</a></li>
						<li><a asp-action="Wishlist" asp-controller="Home">Yêu thích</a></li>
						<li><a asp-action="History" asp-controller="Account">Theo dõi đơn hàng</a></li>
					</ul>
				</div>
			</div>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /top footer -->  
</footer>
