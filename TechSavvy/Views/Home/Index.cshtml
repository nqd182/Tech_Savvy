@model IEnumerable<ProductModel>
<style>
    h2.title{
        color: black
    }
</style>
<!-- SLIDER ĐƯỢC ĐẶT Ở TRÊN CÙNG -->
<div class="row">
    <div class="col-12">
        <partial name="_Slider" />
    </div>
</div>

<!-- PHẦN CHÍNH GỒM SIDEBAR VÀ DANH SÁCH SẢN PHẨM -->
<div class="row">
    <!-- SIDEBAR -->
    <div class="col-sm-3 sticky-sidebar">
        @Html.Partial("_SidebarPartial")
    </div>

    <!-- DANH SÁCH SẢN PHẨM -->
    <div class="col-sm-9 padding-right">
        <partial name="_FilterProductsPartial" />
        <div class="features_items">
            <h2 class="title text-center" style="padding-top: 20px;">Danh sách sản phẩm</h2>

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-4">
                        <div class="product-card">
                            <a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id">
                                <img src="~/media/products/@item.Image" alt="@item.Name" />
                            </a>
                            <div class="product-info">
                                <p class="product-price">@item.Price.ToString("#,##0 vnđ")</p>
                                <p><strong>@item.Name</strong></p>
                                <p>Danh mục: @item.Category.Name</p>
                                <p>Thương hiệu: @item.Brand.Name</p>
                            </div>

                            <div class="btn-group-custom">
                                @if (item.Quantity > 0)
                                {
                                    <button class="btn add-to-cart" data-product_id="@item.Id">
                                        <i class="fa fa-shopping-cart"></i> Thêm giỏ hàng
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-default">Hết hàng</button>
                                }

                                @if (User.Identity?.IsAuthenticated ?? false)
                                {
                                    <button class="btn add-btn-wishlist" data-product_id="@item.Id">
                                        <i class="fa fa-heart"></i> Yêu thích
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .product-card {
        border: 1px solid #f0f0f0;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 30px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
        transition: transform 0.2s;
        background-color: #fff;
        height: 565px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .product-card:hover {
            transform: translateY(-5px);
        }

        .product-card img {
            max-width: 100%;
            height: 180px;
            object-fit: contain;
            margin-bottom: 15px;
        }

    .product-info {
        text-align: center;
        flex-grow: 1;
    }

    .product-price {
        font-size: 18px;
        font-weight: bold;
        color: red;
    }

    .btn-group-custom {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        margin-top: 15px;
    }

    .add-to-cart, .add-btn-wishlist {
        width: 100%;
        border-radius: 20px;
        padding: 10px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .add-to-cart {
        background-color: black;
        color: #fff;
        border: none;
    }

        .add-to-cart:hover {
            background-color: darkblue;
        }

    .add-btn-wishlist {
        background-color: #f5f5f5;
        color: deeppink;
        border: 1px solid #ddd;
    }

        .add-btn-wishlist i {
            margin-right: 5px;
        }

        .add-btn-wishlist:hover {
            background-color: #ffe9d6;
        }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.add-to-cart').click(function () {
                var Id = $(this).data("product_id");
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Add", "Cart")",
                    data: { Id: Id },
                    success: function (result) {
                        if (result) {
                            Swal.fire({
                                title: "Thêm giỏ hàng thành công",
                                icon: "success",
                                draggable: true
                            });
                        }
                    }
                });
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('.add-btn-wishlist').click(function () {
                var Id = $(this).data("product_id");

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("AddWishlist", "Home")",
                    data: { Id: Id },
                    success: function (result) {
                        Swal.fire({
                            title: "Thêm sản phẩm thành công",
                            icon: "success",
                            draggable: true
                        });
                    }
                });
            });
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#sort_by').on('change', function () {
                var url = $(this).val();
                if (url) {
                    window.location = url;
                }
                return false;
            });
        });
    </script>
}
