@{
    ViewData["Title"] = "404 - Page Not Found";
}
<style>
    .not-found-container {
        min-height: calc(100vh - 150px); /* Trừ chiều cao header và footer */
        background-color: #f8f9fa;
    }
</style>
<div class="not-found-container d-flex justify-content-center align-items-center">
    <div class="text-center">
        <img src="https://cdn-icons-png.flaticon.com/512/284/284270.png" alt="404 Not Found" class="img-fluid mb-4" style="max-width: 300px;">
        <h1 class="display-4 text-danger">404</h1>
        <h2 class="text-dark">Oops! Không tìm thấy trang</h2>
        <p class="text-muted">Liên kết bạn đang tìm có thể đang bị lỗi hoặc bạn không có quyền truy cập.</p>
        <a href="/" class="btn btn-primary mt-3 px-4 py-2">
            <i class="fa fa-home"></i> Về trang chủ
        </a>
    </div>
</div>

