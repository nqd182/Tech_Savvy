@using TechSavvy.Models.ViewModels
@model CartItemViewModel

<section id="cart_items" class="py-4">
    <div class="container">
        <div class="breadcrumbs mb-4">
            <ol class="breadcrumb bg-white p-2 rounded shadow-sm">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active">Giỏ hàng</li>
            </ol>
        </div>

        <div class="table-responsive shadow-sm rounded bg-white">
            <table class="table table-hover table-bordered text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CartItems.Any())
                    {
                        foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td class="align-middle">
                                    <img src="~/media/products/@item.Image" alt="" width="80" height="80" class="rounded" />
                                </td>
                                <td class="align-middle font-weight-bold">@item.ProductName</td>
                                <td class="align-middle">@item.Price.ToString("#,##0 VNĐ")</td>
                                <td class="align-middle">
                                    <div class="d-flex justify-content-center align-items-center">
                                        <a class="btn btn-sm btn-outline-secondary mr-1"
                                           asp-action="Increase" asp-controller="Cart"
                                           asp-route-id="@item.ProductId">+</a>
                                        <input class="form-control form-control-sm text-center mx-1" type="text"
                                               value="@item.Quantity" readonly style="width: 50px;">
                                        <a class="btn btn-sm btn-outline-secondary ml-1"
                                           asp-action="Decrease" asp-controller="Cart"
                                           asp-route-id="@item.ProductId">-</a>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    @(item.Quantity * item.Price).ToString("#,##0 VNĐ")
                                </td>
                                <td class="align-middle">
                                    <a class="btn btn-sm btn-danger" asp-action="Remove" asp-controller="Cart"
                                       asp-route-id="@item.ProductId">
                                        <i class="fa fa-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }

                        <tr class="bg-light font-weight-bold">
                            <td colspan="4" class="text-right">Tổng cộng:</td>
                            <td colspan="2" class="text-left">@Model.GrandTotal.ToString("#,##0 đ")</td>
                        </tr>
                        <tr class="bg-light font-weight-bold">
                            <td colspan="4" class="text-right">Phí ship:</td>
                            <td colspan="1" class="text-left">@Model.ShippingCost.ToString("#,##0 đ")</td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-action="DeleteShipping" asp-controller="Cart">Xóa phí ship</a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="6" class="text-right">
                                <a class="btn btn-danger btn-sm" asp-controller="Cart" asp-action="Clear">Xóa tất cả</a>
                                @if (Model.ShippingCost > 0)
                                {
                                    <a class="btn btn-primary btn-sm" asp-controller="Checkout" asp-action="Checkout">Đặt hàng</a>
                                }
                                else
                                {
                                    <a class="btn btn-primary btn-sm disabled" aria-disabled="true">Đặt hàng</a><br />
                                    <small class="text-danger d-block mt-1">Tính phí ship trước khi đặt hàng</small>
                                }
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="py-4">
                                <h5 class="text-muted">Không có sản phẩm nào trong giỏ hàng.</h5>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.CartItems.Any())
        {
            <div class="row mt-4">
                <div class="col-md-4 mb-3">
                    <label for="tinh">Tỉnh/Thành phố</label>
                    <select class="form-control" id="tinh" name="tinh">
                        <option value="0">Chọn tỉnh/thành</option>
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="quan">Quận/Huyện</label>
                    <select class="form-control" id="quan" name="quan">
                        <option value="0">Chọn quận/huyện</option>
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="phuong">Phường/Xã</label>
                    <select class="form-control" id="phuong" name="phuong">
                        <option value="0">Chọn phường/xã</option>
                    </select>
                </div>
            </div>

            <div class="text-right">
                <button type="button" class="btn btn-success btn-sm btn-add-shipping mt-2">Tính phí ship</button>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            $(".btn-add-shipping").click(function () {
                var tinh = $("#tinh option:selected").text();
                var quan = $("#quan option:selected").text();
                var phuong = $("#phuong option:selected").text();

                if (tinh === '' || quan === '' || phuong === '') {
                    Swal.fire("Làm ơn không bỏ trống.");
                } else {
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("GetShipping", "Cart")",
                        data: { tinh: tinh, quan: quan, phuong: phuong },
                        success: function (result) {
                            if (result) {
                                location.reload();
                            }
                        }
                    });
                }
            });

            $.getJSON('https://esgoo.net/api-tinhthanh/1/0.htm', function (data_tinh) {
                if (data_tinh.error === 0) {
                    $.each(data_tinh.data, function (key, val) {
                        $("#tinh").append('<option value="' + val.id + '">' + val.full_name + '</option>');
                    });

                    $("#tinh").change(function () {
                        var idtinh = $(this).val();
                        $.getJSON('https://esgoo.net/api-tinhthanh/2/' + idtinh + '.htm', function (data_quan) {
                            if (data_quan.error === 0) {
                                $("#quan").html('<option value="0">Quận Huyện</option>');
                                $("#phuong").html('<option value="0">Phường Xã</option>');
                                $.each(data_quan.data, function (key, val) {
                                    $("#quan").append('<option value="' + val.id + '">' + val.full_name + '</option>');
                                });

                                $("#quan").change(function () {
                                    var idquan = $(this).val();
                                    $.getJSON('https://esgoo.net/api-tinhthanh/3/' + idquan + '.htm', function (data_phuong) {
                                        if (data_phuong.error === 0) {
                                            $("#phuong").html('<option value="0">Phường Xã</option>');
                                            $.each(data_phuong.data, function (key, val) {
                                                $("#phuong").append('<option value="' + val.id + '">' + val.full_name + '</option>');
                                            });
                                        }
                                    });
                                });
                            }
                        });
                    });
                }
            });
        });
    </script>
}
