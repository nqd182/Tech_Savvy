@model AppUserModel

<div class="container mt-5 d-flex justify-content-center">
    <form asp-action="UpdateInforAccount" asp-controller="Account" method="POST" class="w-100" style="max-width: 600px;">
        <input type="hidden" asp-for="Id" />
        <div class="card shadow-sm rounded-4 p-4 border border-secondary">

            <!-- Avatar và tên -->
            <div class="text-center mb-4">
                <img src="~/images/TechSavvy-removebg-preview.png" alt="Avatar"
                     class="rounded-circle" style="width: 100px; height: 100px;" />
                <h4 class="mt-3">@Model.UserName</h4>
            </div>

            <!-- Email -->
            <div class="row mb-3 align-items-center">
                <label class="col-sm-4 fw-bold mb-0">Email:</label>
                <div class="col-sm-8">
                    <p class="form-control-plaintext mb-0">@Model.Email</p>
                </div>
            </div>

            <!-- Số điện thoại -->
            <div class="row mb-3 align-items-center">
                <label for="PhoneNumber" class="col-sm-4 fw-bold mb-0">Số điện thoại:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="PhoneNumber" />
                </div>
            </div>

            <!-- Đổi mật khẩu -->
            <div class="text-center my-3">
                <a asp-action="ChangePassword" class="text-decoration-none">Đổi mật khẩu</a>
            </div>

            <!-- Nút cập nhật -->
            <div class="text-center">
                <button type="submit" class="btn btn-danger px-4">Cập nhật thông tin</button>
            </div>
        </div>
    </form>
</div>
