@model AppUserModel
<style>
    body {
        background-color: #f8f9fa !important; /* Đảm bảo nền sáng */
    }

    .update-account-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 150px); /* Trừ chiều cao header */
    }

    .update-account-form {
        max-width: 600px;
        width: 100%;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

        .update-account-form img {
            border: 2px solid #ddd;
            padding: 5px;
        }
</style>
<div class="update-account-container">
    <form asp-action="UpdateInforAccount" asp-controller="Account" method="POST" class="update-account-form">
        <input hidden asp-for="Id"/>
        <div class="text-center mb-4">
            <img src="~/images/avatar-removebg-preview.png" alt="Avatar"
                 class="rounded-circle"
                 style="width: 100px; height: 100px;" />
            <h4 class="mt-3">@Model.UserName</h4>
        </div>

        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 fw-bold mb-0 text-end">Email:</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext mb-0">@Model.Email</p>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label for="PhoneNumber" class="col-sm-4 fw-bold mb-0 text-end">Số điện thoại:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label for="BirthYear" class="col-sm-4 fw-bold mb-0 text-end">Năm sinh:</label>
            <div class="col-sm-8">
                <input type="number" class="form-control" asp-for="BirthYear" placeholder="Nhập năm sinh" />
                <span asp-validation-for="BirthYear" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label for="Gender" class="col-sm-4 fw-bold mb-0 text-end">Giới tính:</label>
            <div class="col-sm-8">
                <select class="form-control" asp-for="Gender">
                    <option value="">-- Chọn giới tính --</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                    <option value="Khác">Khác</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4">Cập nhật thông tin</button>
        </div>
    </form>
</div>