@model AppUserModel
<style>
    body {
        background-color: #f8f9fa !important;
    }

    .update-account-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 50px;
    }

    .update-account-form {
        max-width: 650px;
        width: 100%;
        background: #fff;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        padding: 30px;
    }

    .avatar-preview {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid #ddd;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .update-account-form h4 {
        font-weight: 600;
        margin-top: 15px;
    }

    .update-account-form .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
    }

        .update-account-form .form-control:focus {
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
        }

    .update-account-form label {
        font-weight: 500;
    }
</style>

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-white p-3 rounded shadow-sm align-items-center">
            <li class="breadcrumb-item">
                <a href="/" class="d-flex align-items-center text-decoration-none text-dark">
                    <i class="fas fa-home me-1"></i> Trang chủ
                </a>
            </li>
            <li class="breadcrumb-item active text-muted" aria-current="page">Thông tin tài khoản</li>
        </ol>
    </nav>
</div>

<div class="update-account-container">
    <form asp-action="UpdateInforAccount" asp-controller="Account" method="POST" enctype="multipart/form-data" class="update-account-form">
        <input hidden asp-for="Id" />

        <div class="text-center mb-4">
            <img src="~/images/avatar-removebg-preview.png" alt="Avatar" class="avatar-preview" />
            <div class="mt-3">
                <label for="Avatar" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-upload"></i> Đổi ảnh đại diện
                </label>
                <input type="file" id="Avatar" name="Avatar" accept="image/*" style="display: none;" />
            </div>
            <h4 class="mt-3">@Model.UserName</h4>
        </div>

        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 fw-bold mb-0 text-end">Email:</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext mb-0">@Model.Email</p>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label for="PhoneNumber" class="col-sm-4 fw-bold mb-0 text-end">Số điện thoại:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label for="BirthYear" class="col-sm-4 fw-bold mb-0 text-end">Năm sinh:</label>
            <div class="col-sm-8">
                <input type="number" class="form-control" asp-for="BirthYear" placeholder="Nhập năm sinh" />
                <span asp-validation-for="BirthYear" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4 align-items-center">
            <label for="Gender" class="col-sm-4 fw-bold mb-0 text-end">Giới tính:</label>
            <div class="col-sm-8">
                <select class="form-control" asp-for="Gender">
                    <option value="">-- Chọn giới tính --</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                    <option value="Khác">Khác</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-center gap-2 mt-3">
            <button type="submit" class="btn btn-primary">Cập nhật thông tin</button>
            <a href="/Account/ChangePassword" class="btn btn-outline-dark">Đổi mật khẩu</a>
        </div>
    </form>
</div>
