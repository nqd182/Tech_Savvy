@using TechSavvy.Models.Momo
@model MomoExecuteResponseModel
@{
    ViewData["Title"] = "Kết quả giao dịch thành công";
}
<style>
    .center-card-row {
        display: flex !important;
        justify-content: center !important;
        align-items: center;
        width: 100%;
        margin: 0;
        padding: 0;
    }
</style>

<div class="container py-5">
    <div class="row center-card-row">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg border-success mx-auto">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fa fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="card-title text-success mb-3">Thanh toán MOMO thành công!</h3>
                    <p class="mb-2"><strong>Mã đơn hàng:</strong> @Model.OrderId</p>
                    <p class="mb-2"><strong>Thông tin:</strong> @Model.OrderInfo</p>
                    <p class="mb-4"><strong>Số tiền:</strong> @Model.Amount.ToString() VNĐ</p>
                    <a asp-controller="Account" asp-action="History" class="btn btn-primary">
                        Xem lịch sử đơn hàng
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>